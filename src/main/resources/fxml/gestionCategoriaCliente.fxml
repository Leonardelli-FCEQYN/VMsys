<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unam.mvmsys.controller.configuracion.GestionCategoriaClienteController" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #F9FAFB;">
   <top>
      <VBox spacing="0.0" style="-fx-padding: 20px;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <VBox spacing="4.0">
                     <children>
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #991b1b;" text="Categorías de Cliente" />
                        <Label style="-fx-font-size: 13px; -fx-text-fill: #6B7280;" text="Cree, edite o desactive las categorías disponibles en el sistema" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox styleClass="card" style="-fx-padding: 20px; -fx-margin: 0 20 0 20;">
         <children>
            <HBox spacing="10.0" VBox.vgrow="NEVER" style="-fx-padding: 0 0 15 0;">
               <children>
                  <TextField fx:id="txtNuevaCategoria" promptText="Nombre de la categoría..." HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#accionCrearCategoria" prefHeight="40.0" styleClass="btn-primary" style="-fx-background-color: #991b1b; -fx-text-fill: white; -fx-font-weight: 600; -fx-padding: 0 20;" text="➕ Crear" />
               </children>
            </HBox>
            
            <Label style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #374151; -fx-padding: 10 0 10 0;" text="Categorías Existentes" />
            
            <TableView fx:id="tblCategorias" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
                  <TableColumn fx:id="colDescripcion" prefWidth="200.0" text="Descripción" />
                  <TableColumn fx:id="colEstado" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Estado" />
                  <TableColumn fx:id="colAcciones" prefWidth="180.0" style="-fx-alignment: CENTER;" text="Acciones" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox spacing="10.0" style="-fx-padding: 15px 20px; -fx-alignment: CENTER_RIGHT;">
         <children>
            <Button mnemonicParsing="false" onAction="#accionCerrar" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: white; -fx-text-fill: #374151; -fx-font-weight: 600; -fx-border-color: #D1D5DB; -fx-border-width: 1.5; -fx-border-radius: 4; -fx-background-radius: 4;" text="Cerrar" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
