<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 25px; -fx-background-color: #f3f4f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unam.mvmsys.controller.stock.forms.FormProductoController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label fx:id="lblTitulo" styleClass="page-title" text="Nuevo Producto" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#accionCancelar" styleClass="btn-secondary" text="Cancelar" />
            <Button onAction="#accionGuardar" styleClass="btn-primary" text="Guardar Producto" />
         </children>
      </HBox>

      <VBox spacing="25.0" styleClass="card" VBox.vgrow="ALWAYS">
         <children>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #4b5563;" text="Ficha Técnica" />
            
            <GridPane hgap="25.0" vgap="20.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.0" />
                  <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.0" />
                  <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
               </rowConstraints>
               
               <children>
                  <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                     <Label styleClass="label-form" text="Código SKU *" />
                     <TextField fx:id="txtSku" />
                  </VBox>
                  <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2">
                     <Label styleClass="label-form" text="Nombre del Producto *" />
                     <TextField fx:id="txtNombre" />
                  </VBox>
                  
                  <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <Label styleClass="label-form" text="Rubro / Categoría *" />
                        <ComboBox fx:id="cbTipo" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                  </VBox>
                 <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <Label styleClass="label-form" text="Unidad Medida *" />
                        <ComboBox fx:id="cbUnidad" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                  </VBox>
                  <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <Label styleClass="label-form" text="Stock Mínimo" />
                     <TextField fx:id="txtStockMin" text="0" />
                  </VBox>

                  <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="3">
                     <Label styleClass="label-form" text="Descripción Detallada" />
                     <TextArea fx:id="txtDescripcion" prefRowCount="4" wrapText="true" />
                  </VBox>
                  
                  <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3">
                     <Label styleClass="label-form" text="Costo Reposición ($)" />
                     <TextField fx:id="txtCosto" text="0.00" />
                  </VBox>
                  <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                     <Label styleClass="label-form" text="Precio Venta Base ($)" />
                     <TextField fx:id="txtPrecio" text="0.00" />
                  </VBox>
               </children>
            </GridPane>
            
            <Region VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</VBox>