<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unam.mvmsys.controller.stock.GestorStockController">
   <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            
            <VBox fx:id="viewLista" spacing="20.0" style="-fx-padding: 25px;">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <VBox>
                           <children>
                              <Label styleClass="page-title" text="Stock e Inventario" />
                              <Label styleClass="page-subtitle" text="Control general de productos y existencias" />
                           </children>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button onAction="#accionNuevo" styleClass="btn-primary" text="+ Nuevo Producto" />
                     </children>
                  </HBox>

                  <VBox spacing="15.0" styleClass="card" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <TextField fx:id="txtBusquedaProducto" prefWidth="350.0" promptText="ðŸ” Buscar por SKU o Nombre..." styleClass="search-field" />
                           </children>
                        </HBox>
                        
                        <TableView fx:id="tblProductosStock" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="colCodigo" prefWidth="100.0" text="SKU" />
                              <TableColumn fx:id="colNombreProducto" prefWidth="250.0" text="PRODUCTO" />
                              <TableColumn fx:id="colCategoria" prefWidth="120.0" text="RUBRO" />
                              <TableColumn fx:id="colUnitario" prefWidth="80.0" style="-fx-alignment: CENTER;" text="UNIDAD" />
                              <TableColumn fx:id="colStockActual" prefWidth="120.0" style="-fx-alignment: CENTER;" text="STOCK" />
                              <TableColumn fx:id="colStockMinimo" prefWidth="100.0" style="-fx-alignment: CENTER;" text="MINIMO" />
                              <TableColumn fx:id="colCostoUnitario" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="COSTO REP." />
                              <TableColumn fx:id="colPrecioVenta" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="PRECIO VTA." />
                              <TableColumn fx:id="colAccionesProducto" text="ACCIONES" prefWidth="120" style="-fx-alignment: CENTER;" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        
                        <HBox fx:id="paginationBoxProductos" alignment="CENTER" spacing="5.0" />
                     </children>
                  </VBox>
               </children>
            </VBox>

            <StackPane fx:id="contenedorFormulario" visible="false">
                 <fx:include fx:id="formProducto" source="../forms/formProducto.fxml" />
            </StackPane>

         </children>
      </StackPane>
   </children>
</AnchorPane>