                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </HBox>
                        
                        <Separator style="-fx-opacity: 0.5;">
                           <VBox.margin>
                              <Insets bottom="25.0" />
                           </VBox.margin>
